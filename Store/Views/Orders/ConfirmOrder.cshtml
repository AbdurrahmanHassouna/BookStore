@model List<Store.Models.OrderItem>

@{
    ViewBag.Title = "Order Confirmation";
}

<div class="container mt-5">
    <h2 class="mb-4">Order Confirmation</h2>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Book</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BookName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <h4>Total Amount: @Model.Sum(n => n.Price).ToString("C")</h4>
    </div>

    <p class="mt-4">Thank you for your order!</p>
</div>
