<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="~/Scripts/jquery-3.6.4.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/Stars.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
        <div class="container-fluid ms-5">
            @Html.ActionLink("B", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
                    <li class="nav-item">@Html.ActionLink("Books", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Authors", "Index", "Authors", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Categories", "Index", "Categories", new { area = "" }, new { @class = "nav-link" })</li>
                    
                    @if (User.IsInRole("admin"))
                    {

                        <li class="nav-item">@Html.ActionLink("Manage Books", "Index", "Books", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton">
                                <li>@Html.ActionLink("Add Book", "Create", "Books", null, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Orders", "Index", "Orders", null, new { @class = "dropdown-item" }) </li>

                            </ul>
                        </li>

                    }


                </ul>
                @Html.Partial("_Login")
                @if (!User.IsInRole("Admin"))
                {

                    using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "d-flex me-5 form-inline" }))
                    {
                        @Html.TextBox("Search", null, new { id = "SearchHome", placeholder = "Search", @class = "input-group ps-2 rounded" });
                        <input class="btn  btn-outline-dark ml-2" type="submit" value="Search" style="background-color: aquamarine" />

                    }

                    <script type="text/javascript">
                        $(function () {
                            $("#SearchHome").autocomplete({
                                source: './Home/AutoComplete'
                            })
                        });
                    </script>



                }
                else
                {
                    using (Html.BeginForm("Index", "Books", FormMethod.Post, new { @class = "d-flex me-5 form-inline" }))
                    {
                        @Html.TextBox("Search", null, new { id = "SearchAdmin", placeholder = "Search", @class = "input-group ps-2 rounded" });
                        <input class="btn  btn-outline-dark ml-2" type="submit" value="Search" style="background-color: aquamarine" />


                    }
                    <script type="text/javascript">
                        $(function () {
                            $("#SearchAdmin").autocomplete({
                                source: './Books/AutoComplete'
                            })
                        });
                    </script>
                }
                @if (!((ViewContext.RouteData.Values["controller"].ToString() == "Cart") || (ViewContext.RouteData.Values["controller"].ToString() == "Orders")))
                {

                    <a class="nav-item nav-link ml-3" href="./Cart/Index" style="position: relative;">
                        <img src="~/Assets/icons8-cart-50.png" class="rounded" alt="Cart Icon" style="width: 40px; height: 40px;background-color:aquamarine" />

                        <span id="cartItemCount" class="badge badge-pill badge-danger" style="position: absolute; top: -5px; right: -5px;">@Html.Partial("_CartCount", Store.HelperClasses.CartCookieHelper.GetCartItems(Context).Count)</span>
                    </a>
                }
            </div>




        </div>
    </nav>

    <div class="p-5">
        <div style="min-height:600px">@RenderBody()</div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -عَبْدُ الرَّحْمَٰنِ حسونة </p>
        </footer>
    </div>
</body>
</html>
