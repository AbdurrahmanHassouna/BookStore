@model IEnumerable<Store.Models.Category>

@{
    ViewBag.Title = "Categorys";
}

<div class="container mt-5">
    <h2 class="mb-4">Categorys</h2>

    <div class="d-flex align-self-end">
        @using (Html.BeginForm("Index", "Categories", FormMethod.Post, new { @class = "d-flex me-5 form-inline" }))
        {
            @Html.TextBox("Search", null, new { id = "SearchCategories", placeholder = "Search", @class = "input-group ps-2 rounded" });
            <input class="btn  btn-outline-dark ml-2" type="submit" value="Search" style="background-color: aquamarine" />
        }

        <script type="text/javascript">
            $(function () {
                $("#SearchCategories").autocomplete({
                    source: './Categories/AutoComplete'
                })
            });
        </script>
    </div>
    <div class="container">
        <h2>Categorys</h2>
        <div class="row">
            @foreach (var Category in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@Category.Name</h5>
                            <p class="card-text">Number of Books: @Category.Books.Count()</p>
                            <a href="@Url.Action("IndexCategory", "Home", new { CategoryId = Category.Id })" class="btn btn-primary">View Books</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
